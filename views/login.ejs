<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/login.css">
</head>
<body>
    <div class="container">
        <div class="title">2FRIEND</div>
        <h1>Welcome Back</h1>
        <form action="/login" method="POST">
            <div class="form-group">
                <input type="text" id="username" name="username" placeholder=" " required>
                <label for="username">Username or Email</label>
            </div>
            <div class="form-group">
                <input type="password" id="password" name="password" placeholder=" " required>
                <label for="password">Password</label>
            </div>
            <% if (typeof error !== 'undefined' && error && error !== 'Please log in to access') { %>
                <p class="error-message"><%= error %></p>
            <% } %>
            <button type="submit">Log in</button>
        </form>
        <button class="google-login" onclick="window.location.href='/auth/google'">
            <img src="https://www.google.com/favicon.ico" alt="Google logo" width="20">
            <span>Log in with Google</span>
        </button>
        <hr>
        <div class="register-link">
            <p>Don't have an account? <a href="/register">Register here</a></p>
        </div>
        <div class="forgot-password">
            <a href="/forgot-password">Forgotten password?</a>
        </div>
    </div>
</body>
</html>
