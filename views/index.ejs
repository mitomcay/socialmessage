<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>2 FRIEND</title>
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.socket.io/4.7.1/socket.io.min.js"></script>
</head>
<body>
    <div class="layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <a href="/">2FRIEND</a>
            </div>
            <nav>
                <ul>
                    <li><a href="/"><i class="fas fa-home"></i> Home</a></li>
                    <li><a href="/community/page"><i class="fas fa-users"></i> Community</a></li>
                    <li><a href="/message"><i class="fas fa-envelope"></i> Messages</a></li>
                    <li><a href="/profile"><i class="fas fa-user"></i> Profile</a></li>
                </ul>
            </nav>
            <div class="search-bar">
                <input type="text" id="searchInput" placeholder="Search...">
            </div>
            <div id="search-post-result"></div>
        </aside>        

        <!-- Main Content -->
        <main class="main-content">
            <div class="content">
                <!-- New Post Form -->
                <section class="new-post">
                    <h2>Create New Post</h2>
                    <form id="postForm" enctype="multipart/form-data">
                        <div>
                            <textarea name="content" placeholder="What's on your mind?" required></textarea>
                        </div>
                        <div id="uploadForm">
                            <input type="file" id="mediaInput" name="media" accept="image/*, video/*" multiple>
                        </div>
                        <button type="submit" class="btn-success">Post</button>
                    </form>
                </section>

                <!-- All Posts -->
                <section class="posts">
                    <h2>All Posts</h2>
                    <div id="all-post">
                        <!-- Posts will be dynamically inserted here -->
                    </div>
                </section>
            </div>
        </main>

        <!-- Friends Sidebar -->
        <aside class="friends">
            <div><a href="/friend/Orderfriend">All Friend</a></div>
            <div class="search-friends">
                <input type="text" id="friend-search" placeholder="Search for friends...">
                <button onclick="searchFriends()">Search</button>
            </div>
            <div id="search-results">
                <!-- Friend search results will be dynamically inserted here -->
            </div>
        </aside>
    </div>

    <div class="chatbot-btn" onclick="toggleChat()">
        <i class="fas fa-comment-dots"></i>
    </div>

    <footer>
        <p>&copy;2024 - 2Friend - Connect your friends</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/javascripts/index.js"></script>
</body>
</html>

